<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Gundo\ProductInfoAgent\Block\Chat" 
                   name="productinfoagent.chat.cms" 
                   template="Gundo_ProductInfoAgent::chat.phtml"
                   ifconfig="productinfoagent/general/enabled"
                   after="-">
                <arguments>
                    <argument name="cache_lifetime" xsi:type="number">0</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page> 