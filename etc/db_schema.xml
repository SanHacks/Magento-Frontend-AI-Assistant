<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="productinfoagento_ai" resource="default" engine="innodb" comment="Product Info Agent">
        <column xsi:type="int" name="chat_id" unsigned="true" nullable="false" identity="true" comment="Record ID"/>
        <column xsi:type="int" name="user_id" unsigned="true" nullable="true" identity="false" comment="Chat User ID"/>
        <column xsi:type="varchar" name="session_id" length="255" nullable="true" comment="Chat Session ID"/>
        <column xsi:type="datetime" name="created_at" nullable="true" on_update="false" comment="Created At"/>
        <column xsi:type="int" name="product_id" unsigned="true" nullable="true" identity="false"
                comment="Chat Product ID"/>
        <column xsi:type="datetime" name="updated_at" nullable="true" on_update="true" comment="Updated At"/>
        <column xsi:type="longtext" name="data_collection" nullable="true" comment="Data Collection"/>
        <column xsi:type="text" name="message" nullable="true"  comment="Response Text"/>
        <column xsi:type="text" name="model" nullable="true"  comment="LLM Model"/>
        <column xsi:type="int" name="response_time_ms" unsigned="true" nullable="true" comment="Response Time in MS"/>
        <column xsi:type="int" name="tokens_prompt" unsigned="true" nullable="true" comment="Prompt Tokens"/>
        <column xsi:type="int" name="tokens_response" unsigned="true" nullable="true" comment="Response Tokens"/>
        <column xsi:type="smallint" name="feedback" nullable="true" default="0" comment="User Feedback"/>
        <column xsi:type="varchar" name="user_agent" length="500" nullable="true" comment="User Agent String"/>
        <column xsi:type="varchar" name="ip_address" length="45" nullable="true" comment="User IP Address"/>
        <column xsi:type="varchar" name="page_url" length="500" nullable="true" comment="Page URL"/>
        <column xsi:type="smallint" name="voice_requested" nullable="true" default="0" comment="Voice Generation Requested"/>
        <column xsi:type="text" name="conversation_context" nullable="true" comment="Conversation Context"/>
        <column xsi:type="int" name="interaction_sequence" unsigned="true" nullable="true" default="1" comment="Message Sequence in Session"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="chat_id"/>
        </constraint>
        <index referenceId="PRODUCTINFOAGENTO_AI_ID" indexType="btree">
            <column name="chat_id"/>
        </index>
        <index referenceId="PRODUCTINFOAGENTO_AI_SESSION_ID" indexType="btree">
            <column name="session_id"/>
        </index>
    </table>
    <table name="productinfoagent_suggestion" resource="default" engine="innodb" comment="Product Info Agent Suggestions">
        <column xsi:type="int" name="suggestion_id" unsigned="true" nullable="false" identity="true" comment="Suggestion ID"/>
        <column xsi:type="int" name="product_id" unsigned="true" nullable="false" comment="Product ID"/>
        <column xsi:type="text" name="question" nullable="false" comment="Suggested Question"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="int" name="priority" unsigned="true" nullable="false" default="0" comment="Display Priority"/>
        <column xsi:type="boolean" name="is_active" nullable="false" default="true" comment="Is Active"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="suggestion_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="PRODUCTINFOAGENT_SUGGESTION_PRODUCT_ID_CATALOG_PRODUCT_ENTITY_ENTITY_ID" 
                    table="productinfoagent_suggestion" column="product_id" referenceTable="catalog_product_entity" 
                    referenceColumn="entity_id" onDelete="CASCADE"/>
        <index referenceId="PRODUCTINFOAGENT_SUGGESTION_PRODUCT_ID" indexType="btree">
            <column name="product_id"/>
        </index>
        <index referenceId="PRODUCTINFOAGENT_SUGGESTION_PRIORITY" indexType="btree">
            <column name="priority"/>
        </index>
    </table>
    <table name="productinfoagent_suggestion_view" resource="default" engine="innodb" comment="Product Info Agent Suggestion Views">
        <column xsi:type="int" name="view_id" unsigned="true" nullable="false" identity="true" comment="View ID"/>
        <column xsi:type="int" name="product_id" unsigned="true" nullable="false" comment="Product ID"/>
        <column xsi:type="int" name="customer_id" unsigned="true" nullable="true" comment="Customer ID (null for guests)"/>
        <column xsi:type="varchar" name="session_id" nullable="false" length="255" comment="Session ID"/>
        <column xsi:type="text" name="viewed_suggestions" nullable="false" comment="JSON array of viewed suggestion IDs"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP" comment="Updated At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="view_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="PRODUCTINFOAGENT_SUGGESTION_VIEW_PRODUCT_ID_CATALOG_PRODUCT_ENTITY_ENTITY_ID" 
                    table="productinfoagent_suggestion_view" column="product_id" referenceTable="catalog_product_entity" 
                    referenceColumn="entity_id" onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="PRODUCTINFOAGENT_SUGGESTION_VIEW_CUSTOMER_ID_CUSTOMER_ENTITY_ENTITY_ID" 
                    table="productinfoagent_suggestion_view" column="customer_id" referenceTable="customer_entity" 
                    referenceColumn="entity_id" onDelete="CASCADE"/>
        <index referenceId="PRODUCTINFOAGENT_SUGGESTION_VIEW_PRODUCT_CUSTOMER" indexType="btree">
            <column name="product_id"/>
            <column name="customer_id"/>
        </index>
        <index referenceId="PRODUCTINFOAGENT_SUGGESTION_VIEW_SESSION" indexType="btree">
            <column name="session_id"/>
        </index>
    </table>
</schema>
