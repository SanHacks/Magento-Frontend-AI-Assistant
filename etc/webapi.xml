<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Webapi:etc/webapi.xsd">
    <route url="/V1/productinfoagent/message" method="POST">
        <service class="Gundo\ProductInfoAgent\Api\ChatInterface" method="sendMessage"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/productinfoagent/feedback" method="POST">
        <service class="Gundo\ProductInfoAgent\Api\ChatFeedbackInterface" method="submitFeedback"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/productinfoagent/suggestions/:productId" method="GET">
        <service class="Gundo\ProductInfoAgent\Api\SuggestionInterface" method="getSuggestions"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/productinfoagent/voice" method="POST">
        <service class="Gundo\ProductInfoAgent\Api\VoiceInterface" method="generateVoice"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>
